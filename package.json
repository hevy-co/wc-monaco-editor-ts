{
  "name": "@hevy/wc-monaco-editor-ts",
  "version": "2.0.0",
  "license": "MIT",
  "author": "Matthew Olenik <matt@hevy.co>",
  "description": "A vanilla Monaco Editor web component, written with TypeScript",
  "keywords": [
    "web-components",
    "vanilla",
    "typescript",
    "editor",
    "monaco"
  ],
  "repository": "https://github.com/hevy-co/wc-monaco-editor-ts/",
  "main": "index.js",
  "scripts": {
    "start": "npx live-server --no-browser --port=5500 --open=dev",
    "lint": "semistandard",
    "build": "npm run build:main && npm run build:min",
    "package": "npx rimraf package && npm pack | tail -n 1 | xargs tar -xf",
    "preversion": "npm run lint",
    "postversion": "git push --follow-tags"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "css": "^2.2.4",
    "css-loader": "^3.5.3",
    "file-loader": "^6.0.0",
    "monaco-editor": "^0.20.0",
    "rollup-plugin-terser": "^5.2.0",
    "semistandard": "^14.2.0",
    "style-loader": "^1.2.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "semistandard": {
    "parser": "babel-eslint",
    "ignore": [
      "demo/*",
      "dev/*",
      "monaco/*",
      "src/monaco/*",
      "index.js",
      "index.min.js"
    ]
  }
}